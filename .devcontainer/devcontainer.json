{
    "name": "Node.js & TypeScript",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
    "customizations": {
        "vscode": {
            "extensions": [
				"DavidAnson.vscode-markdownlint",
				"streetsidesoftware.code-spell-checker",
